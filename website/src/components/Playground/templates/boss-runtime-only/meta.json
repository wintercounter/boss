{
  "label": "Boss CSS - Runtime-only",
  "description": "Client-only CSS injection (no server CSS)",
  "openFile": "src/App.tsx",
  "init": {
    "command": "pnpm",
    "args": [
      "exec",
      "boss-css",
      "init",
      "-y",
      "--src-root",
      "src",
      "--config-dir",
      "src/.bo$$",
      "--strategy",
      "runtime-only",
      "--plugins",
      "fontsource,reset,token,at,child,css,pseudo,jsx",
      "--globals",
      "true",
      "--eslint-plugin",
      "false",
      "--postcss",
      "auto"
    ]
  },
  "dev": {
    "command": "pnpm",
    "args": ["run", "dev", "--", "--host", "0.0.0.0", "--port", "5173"]
  },
  "install": {
    "command": "pnpm",
    "args": ["install", "--reporter=append-only"]
  }
}
